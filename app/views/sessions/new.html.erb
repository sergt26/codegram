<div class="container">
  <div class="inner-container">
    <div class="jumbotron" id="header">
      <h1 id="Login">Login</h1>
    </div>

    <%= form_tag '/login' do %>
    <form>
      <div class="form-group">
        <label for="email" class="label" >Email:</label>
        <%= text_field_tag(:email, value = nil, class: 'form-control', placeholder: "email")%>
      </div>
      <div class="form-group">
        <label for="password" class="label" >Password:</label>
        <%= password_field_tag(:password, value = nil, class: 'form-control', placeholder: "password")%>
        <%= submit_tag(value = "Submit", class: "btn btn-default") %>
      </div>

    </form>

    <% end %>
  </div>
</div>
